@model List<HomeFinance.web.Models.BillImageViewModel>

<h2>All Bill Images</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img class="card-img-top" src="@item.BillImagePath" alt="Bill Image" />
                <div class="card-body">
                    <p><strong>User:</strong> @item.Username</p>
                    <p><strong>Amount:</strong> @item.Amount.ToString("C")</p>
                    <p><strong>Category:</strong> @item.Category</p>
                    <p><strong>Date:</strong> @item.Date.ToString("yyyy-MM-dd")</p>
                </div>
            </div>
        </div>
    }
</div>
