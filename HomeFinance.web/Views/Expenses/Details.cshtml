@model HomeFinance.web.Models.Expense

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Expense</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Category)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Category)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Description)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Amount)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Amount)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Date)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Date)</dd>

        <dt class="col-sm-2">Store</dt>
        <dd class="col-sm-10">@Model.Store?.StoreName</dd>

        <dt class="col-sm-2">Bill</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.BillImagePath))
            {
                <a href="@Model.BillImagePath" target="_blank">View Bill</a>
            }
            else
            {
                <span>No Bill Available</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
